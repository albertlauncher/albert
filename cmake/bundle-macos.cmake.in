# Move resources
set(RES_SRC ${CMAKE_INSTALL_PREFIX}/share/albert)
FILE(GLOB children RELATIVE ${RES_SRC} ${RES_SRC}/*)
FOREACH(child ${children})
    file(RENAME
        ${RES_SRC}/${child}
        ${BUNDLE_PATH}/Contents/Resources/${child}
    )
ENDFOREACH()

